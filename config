# Configurations here are done setting Puppet facts via environment variables:

# Apps to build
export FACTER_docker_app='puppet-agent'

# Docker Hub username
export FACTER_docker_username='fehraraujo'

# Dockerfile maintainer
export FACTER_docker_maintainer='Fernando Alves <fehraraujo@gmail.com>'

# Add volumes for data and log dirs in Dockerfiles
export FACTER_docker_mount=false

# Working directory (where dockerfiles are generated)
export FACTER_docker_workdir="$(pwd)/dockerfiles"

# Docker config dir
export FACTER_docker_config="${HOME}/.docker"
